@import 'nib'
@import './common'

*
  box-sizing border-box
  &:before, &:after
    box-sizing border-box
.clearfix:before, .clearfix:after
  display table
  content " "
.clearfix:after
  clear both

html, body
  user-select none
a, img
  touch-callout none
  
body
  font-size 14px
  font-family Roboto,Helvetica Neue,Helvetica,Arial,sans-serif
  line-height 1.5
  background #f5f5f5
  font-smoothing antialiased
  color #333

input, .pure-form input[type="text"], .pure-form input[type="password"]
  font-size 13px
  border-radius 4px
  box-shadow inset 0 2px 2px #e9e9e9
  border 1px solid #aeaeae
  line-height 16px
  padding 6px 10px 5px
  &:focus
    outline none
    border-color #aeaeae
    box-shadow inset 0 2px 2px #e9e9e9, 0 0 10px 0 rgba(73, 107, 125, 0.3)

a
  color $COLOR_DARK_BLUE
  text-decoration none
  &:focus, &:hover
    text-decoration underline
    outline 0
.font12
  font-size 12px
.font14
  font-size 14px
.gray
  color #666
.tac
  text-align center
.tar
  text-align right
.pull-right
  float right
.mleft5
  margin-left 5px
.mleft10
  margin-left 10px
.mright5
  margin-right 5px
.mright10
  margin-right 10px
.mask-wrapper
  position fixed
  left 0
  right 0
  top 0
  bottom 0
  z-index 8
  background-color rgba(0, 0, 0, 0.3)

.footer-wrapper
  background-color $COLOR_DARK
  color #fff
  text-align center
  position fixed
  left 0
  right 0
  bottom 0
  line-height 40px
  a
    color #fff

.timing-wrapper
  position fixed
  left 0
  right 0
  bottom 0
  background #fff
  max-height 500px
  overflow-y auto
  a
    position absolute
    right 0
    top 0
    height 23px
    width @height
    text-align center
    color #fff

@import './widget'
@import './login-register'
